<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@color/media_bg2">

    <ImageView
        android:id="@+id/audio_fold_iv"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_media_folder" />

    <TextView
        android:id="@+id/audio_fold_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/audio_fold_iv"
        android:ellipsize="end"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:text="Music"
        android:textColor="@color/media_audio_floder"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/audio_fold_cound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="16dp"
        android:drawablePadding="26dp"
        android:drawableRight="@drawable/ic_next"
        android:text="17"
        android:textColor="@color/media_audio_floder_count"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line1"
        android:orientation="horizontal"></LinearLayout>

